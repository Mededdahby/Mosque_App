@using MuslimApp.Data.Enums
@model RolesCreate
@{
    ViewBag.Title = "Create Roles";
}

<div class="row">

    <form asp-action="Create">
        <div class="col-md-4 offset-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="roleName" class="control-label"></label>
                <select asp-for="roleName" class="form-control"  asp-items="Html.GetEnumSelectList<Rolesuser>()"/>
                <span asp-validation-for="roleName" class="text-danger"></span>
            </div>

            <div class="form-group">

                <a asp-action="Index" class="btn btn-outline-secondary float-lg-start"><i class="bi bi-backspace"></i>Back to List</a>
                <input type="submit" value="Create" class="btn btn-success float-end" /><i class="bi bi-bookmark-plus">Create</i>

            </div>
    </form>
