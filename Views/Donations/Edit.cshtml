                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mosque" class="control-label"></label>
                <select asp-for="mosqueId" class="form-control" asp-items="ViewBag.mosqueId" readonly></select>
                <span asp-validation-for="mosqueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-backspace float-lg-start"></i>Back to List</a>
                <input type="submit" value="Save" class="btn btn-success flaot-end" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
